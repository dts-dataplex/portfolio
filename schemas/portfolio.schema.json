{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/career-schema/v1.0.0",
  "title": "Career Portfolio Schema",
  "description": "A comprehensive schema for professional career data including work history, education, skills, and achievements",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "meta": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date"
        },
        "canonical": {
          "type": "boolean"
        }
      },
      "required": ["version", "lastUpdated"]
    },
    "basics": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "summary": {
          "type": "string"
        },
        "location": {
          "type": "object",
          "properties": {
            "city": {
              "type": "string"
            },
            "region": {
              "type": "string"
            },
            "countryCode": {
              "type": "string",
              "pattern": "^[A-Z]{2}$"
            }
          }
        },
        "profiles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "network": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": ["network", "url"]
          }
        }
      },
      "required": ["name"]
    },
    "work": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "organizationId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "position": {
            "type": "string"
          },
          "employmentType": {
            "type": "string",
            "enum": ["full-time", "part-time", "contract", "freelance", "internship"]
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "location": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "endDate": {
            "type": ["string", "null"],
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "isCurrent": {
            "type": "boolean"
          },
          "summary": {
            "type": "string"
          },
          "highlights": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "technologies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "relevantFor": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "promotedFrom": {
            "type": ["string", "null"]
          },
          "transitionType": {
            "type": ["string", "null"]
          }
        },
        "required": ["id", "name", "position", "startDate"]
      }
    },
    "contracts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["consulting", "freelance", "contractor"]
          },
          "businessName": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "endDate": {
            "type": ["string", "null"],
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "summary": {
            "type": "string"
          },
          "engagements": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "clientName": {
                  "type": "string"
                },
                "clientIndustry": {
                  "type": "string"
                },
                "isConfidential": {
                  "type": "boolean"
                },
                "engagementType": {
                  "type": "string",
                  "enum": ["project", "retainer", "hourly"]
                },
                "duration": {
                  "type": "string"
                },
                "summary": {
                  "type": "string"
                },
                "highlights": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "technologies": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": ["clientName", "summary"]
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["id", "type", "startDate"]
      }
    },
    "compensation": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "workId": {
            "type": "string"
          },
          "effectiveDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "baseSalary": {
            "type": "object",
            "properties": {
              "value": {
                "type": "number",
                "minimum": 0
              },
              "currency": {
                "type": "string",
                "pattern": "^[A-Z]{3}$"
              },
              "period": {
                "type": "string",
                "enum": ["hour", "month", "year"]
              }
            },
            "required": ["value", "currency", "period"]
          },
          "bonus": {
            "type": "object",
            "properties": {
              "target": {
                "type": "number",
                "minimum": 0
              },
              "currency": {
                "type": "string",
                "pattern": "^[A-Z]{3}$"
              },
              "type": {
                "type": "string",
                "enum": ["annual", "quarterly", "performance"]
              }
            }
          },
          "equity": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["RSU", "Stock Options", "ISO", "NSO"]
              },
              "grantValue": {
                "type": "number",
                "minimum": 0
              },
              "vestingSchedule": {
                "type": "string"
              }
            }
          },
          "_visibility": {
            "type": "string",
            "enum": ["private", "recruiter", "public"]
          }
        },
        "required": ["workId", "effectiveDate"]
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "repository": {
            "type": "string",
            "format": "uri"
          },
          "startDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "endDate": {
            "type": ["string", "null"],
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "highlights": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "technologies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "associatedWork": {
            "type": ["string", "null"]
          },
          "type": {
            "type": "string",
            "enum": ["personal", "professional", "open-source", "academic"]
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["id", "name", "description"]
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "institution": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "area": {
            "type": "string"
          },
          "studyType": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "endDate": {
            "type": ["string", "null"],
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "score": {
            "type": "string"
          },
          "honors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "courses": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "thesis": {
            "type": "string"
          }
        },
        "required": ["id", "institution", "area", "studyType"]
      }
    },
    "certificates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "issuer": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "expirationDate": {
            "type": ["string", "null"],
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "credentialId": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["id", "name", "issuer", "date"]
      }
    },
    "awards": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "awarder": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["professional", "academic", "community"]
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["id", "title", "date", "awarder"]
      }
    },
    "publications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "publisher": {
            "type": "string"
          },
          "releaseDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "summary": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["journal-article", "conference-paper", "book-chapter", "preprint"]
          },
          "authors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["id", "name", "publisher"]
      }
    },
    "presentations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "event": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "location": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["conference-talk", "workshop", "webinar", "meetup", "podcast"]
          },
          "audience": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "slidesUrl": {
            "type": "string",
            "format": "uri"
          },
          "videoUrl": {
            "type": "string",
            "format": "uri"
          },
          "summary": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["id", "title", "event", "date"]
      }
    },
    "volunteer": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "organization": {
            "type": "string"
          },
          "position": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "startDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "endDate": {
            "type": ["string", "null"],
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "summary": {
            "type": "string"
          },
          "highlights": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "commitmentLevel": {
            "type": "string",
            "enum": ["daily", "weekly", "monthly", "occasional"]
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["id", "organization", "position"]
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "category": {
            "type": "string",
            "enum": ["programming-language", "framework", "tool", "infrastructure", "methodology", "soft-skill"]
          },
          "level": {
            "type": "string",
            "enum": ["beginner", "intermediate", "advanced", "expert"]
          },
          "yearsExperience": {
            "type": "number",
            "minimum": 0
          },
          "lastUsed": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["name", "category"]
      }
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "language": {
            "type": "string"
          },
          "fluency": {
            "type": "string",
            "enum": ["native", "fluent", "professional", "conversational", "basic"]
          },
          "cefrLevel": {
            "type": "string",
            "enum": ["A1", "A2", "B1", "B2", "C1", "C2"]
          }
        },
        "required": ["language", "fluency"]
      }
    },
    "interests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["name"]
      }
    },
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "relationship": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string"
          },
          "_visibility": {
            "type": "string",
            "enum": ["private", "recruiter", "public"]
          }
        },
        "required": ["name", "relationship"]
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "industries": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "targetRoles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "workPreferences": {
          "type": "object",
          "properties": {
            "remote": {
              "type": "boolean"
            },
            "hybrid": {
              "type": "boolean"
            },
            "onsite": {
              "type": "boolean"
            },
            "willingToRelocate": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "visaStatus": {
              "type": "string"
            }
          }
        }
      }
    },
    "exportProfiles": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "include": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "exclude": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": ["basics"]
}
